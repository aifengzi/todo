page {
  background: linear-gradient(to bottom, #f7f8fa, 80%, #fff);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  color: #333;
}

.input {
  height: 72rpx;
  width: calc(100vw - 160rpx);
  padding-left: 24rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  background-color: #f4f5f9;
  border: 1rpx solid rgba(105, 164, 252, 0.12);
}

.add {
  padding: 10rpx;
  font-size: 30rpx;
}

.todo {
  margin: 30rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
}

.name {
  color: #333;
  font-size: 32rpx;
}

.time {
  margin-top: 20rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  width: 100vw;
  height: 300rpx;
  margin-top: 300rpx;
  text-align: center;
}

.empty_ic {
  width: 232rpx;
  height: 232rpx;
}
.empty_tip {
  font-size: 32rpx;
  color: #999;
}

.hover {
  opacity: 0.7;
}
